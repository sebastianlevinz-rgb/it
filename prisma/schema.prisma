generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  createdAt     DateTime @default(now()) @map("created_at")
  agency_points Int      @default(0) @map("agency_points")
  events        Event[]

  @@map("users")
}

model Event {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  module    String   // 'cravings', 'fasting', 'exercise', 'sleep'
  eventType String   @map("event_type") // 'impulse', 'delay_start', 'outcome', 'window_start'
  timestamp DateTime @default(now())
  payload   Json

  user      User     @relation(fields: [userId], references: [id])

  @@map("events")
}
  